.coupon {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 130px;
  margin: 10px 0;
  padding: 12px;
  border-bottom: #cba solid 5px;
  border-radius: 0 0 5px 5px;
  box-shadow: 0 0 2px rgba(0, 0, 0, 20%);
  font-size: 12px;
  color: #654;
}

.coupon.selected {
  border-color: #fc9153;
  background-image: radial-gradient(circle at bottom right, rgba(252, 145, 83, 10%) 0, #fff 80%);
}

.coupon.invalid {
  border-color: #ccc;
  color: #aaa;
}

.coupon.invalid .desc .amount {
  color: #999;
}

.coupon .desc .main {
  font-size: 16px;
}

.coupon .desc .amount {
  position: absolute;
  top: 2px;
  right: 12px;
  color: #432;
}

.coupon .desc .amount .unit {
  display: inline-block;
  font-size: 14px;
}

.coupon .desc .amount .num {
  display: inline-block;
  font-size: 42px;
}

.coupon .bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  padding: 6px 12px;
  border-top: 1px dashed rgba(0, 0, 0, 10%);
}

.coupon .bottom .limit {
  float: left;
}

.coupon .bottom .detail {
  float: right;
}
